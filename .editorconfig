# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, cliff.toml, etc.)
[*.toml]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_size = 2

# GitHub Actions
[.github/**/*.yml]
indent_size = 2
